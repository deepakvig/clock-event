<div class="container">
  <div class="home-inner">
    <div class="wrapper">
<p id="notice" class="alert alert-success"><%= notice %></p>

<h1>TimeLogs</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Time In</th>
      <th>Time Out</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @track_events.each do |track_event| %>
      <tr>
        <td><%= track_event.time_in %></td>
        <td><%= track_event.time_out %></td>
        <td><%= track_event.description %></td>
        <td><%= link_to 'Show', track_event %></td>
        <td><%= link_to 'Edit', edit_track_event_path(track_event) %></td>
        <td><%= link_to 'Destroy', track_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Track Event', new_track_event_path %>
</div>
</div>
</div>
